generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Network {
  networkId String   @id
  name      String?
  devices   Device[]
}

model Device {
  deviceId   Int          @id @default(autoincrement())
  mac        String       @unique
  ip         String[]
  state      String
  name       String
  type       String?
  make       String?
  model      String?
  first_seen String
  last_seen  String?
  networkId  String?
  network    Network?     @relation(fields: [networkId], references: [networkId])
  DeviceList DeviceList[]
}

model DeviceList {
  id        Int            @id @default(autoincrement())
  deviceId  Int
  device    Device         @relation(fields: [deviceId], references: [deviceId])
  type      DeviceListType
  createdAt DateTime       @default(now())

  @@unique([deviceId, type])
}

enum DeviceListType {
  WHITELIST
  BLACKLIST
}
